{
  "name": "resume-site",
  "version": "1.0.7",
  "description": "Professional resume website with comprehensive testing",
  "type": "module",
  "scripts": {
    "build": "bundle exec jekyll build",
    "serve": "bundle exec jekyll serve --host 0.0.0.0",
    "lint": "biome check . --fix --unsafe && stylelint \"_sass/**/*.scss\" --fix && html-validate index.html && markdownlint \"**/*.md\" --ignore node_modules/",
    "format": "biome format . --write",
    "test:setup": "node tests/test-setup.js",
    "test:unit": "jest",
    "test:visual": "node tests/visual-regression.js",
    "test:visual:init": "CREATE_BASELINE=true node tests/visual-regression.js",
    "test:performance": "lhci autorun",
    "test": "npm run test:setup && npm run test:unit",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "@babel/preset-env": "^7.24.0",
    "@biomejs/biome": "^1.9.4",
    "@lhci/cli": "^0.13.x",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "babel-jest": "^29.7.0",
    "html-validate": "^9.5.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdownlint-cli": "^0.43.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.51.1",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.6.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^15.0.0"
  }
}
