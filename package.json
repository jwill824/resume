{
  "name": "resume-site",
  "version": "1.0.0",
  "description": "Professional resume website with comprehensive testing",
  "type": "module",
  "scripts": {
    "build": "bundle exec jekyll build",
    "serve": "bundle exec jekyll serve --host 0.0.0.0",
    "test:setup": "node scripts/test-setup.js",
    "test:unit": "jest",
    "test:accessibility": "node tests/accessibility.js",
    "test:visual": "node tests/visual-regression.js",
    "test:performance": "node tests/performance.js",
    "test": "npm run test:setup && npm run test:unit && npm run test:accessibility && npm run test:visual && npm run test:performance",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "@babel/preset-env": "^7.24.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "axe-core": "^4.8.4",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.42.1",
    "pngjs": "^7.0.0"
  }
}